<%= tag.article class: 'mb-3 card ', id: dom_id(comment) do %>
  <section class="card-header">
      <%= t('comments.writed_by') %> <%= comment.user.name_or_email %>
      <small>(<time datetime="<%= comment.formatted_created_at %>">
        <%= comment.formatted_created_at %>
      </time>)</small>
  </section>

  <div class="card-body">
    <section class="card-text">
      
      <div class="mb-3">
        <%= sanitize comment.body %>
      </div>
    </section>
    <% if current_user_check?(comment) %>
      <%= link_to t('global.button.delete'), polymorphic_path([comment.commentable, comment]), 
        class: 'btn btn-danger btn-sm', data: {method: :delete, confirm: t('global.dialog.you_sure')} %>
    <% end %>
  </div>
  
<% end %>