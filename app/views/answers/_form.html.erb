<%= render 'shared/errors', object: @answer %>

<%= form_with model: [@question, @answer] do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>
  <% if user_signed_in? %>
    <%= f.submit t('global.button.submit'), class: 'btn btn-success' %>
  <% else %>
    <%= link_to t('answers.please_log_in'), new_session_path, class: 'btn btn-dark' %>
  <% end %>
<% end %>